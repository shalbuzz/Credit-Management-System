@model Credit_Management_System.ViewModels.LoanDetail.LoanDetailUpdateVM

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Branch - Credit Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/adminLayout/edit.css">
</head>
<body class="admin-body">
    <!-- Admin Navbar would be here -->
    <!-- Main Content -->
    <div class="form-container">
        <div class="form-header">
            <div class="form-title">
                <h1>Edit Loan Detail</h1>
                <p>Update loan detail information in the system</p>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="form-btn form-btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to List</span>
                </a>
            </div>
        </div>

        <div class="form-card">
            <div class="form-card-header">
                <div class="form-card-header-icon">
                    <i class="fas fa-file-invoice-dollar"></i>
                </div>
                <div class="form-card-header-content">
                    <h2>Loan Detail #@Model.Id</h2>
                    <p>Last updated: <span class="form-timestamp">@DateTime.Now.ToString("MMM dd, yyyy HH:mm")</span></p>
                </div>
                <div class="form-card-header-status">
                    <span class="form-status-badge">
                        <i class="fas fa-pen"></i>
                        <span>Editing</span>
                    </span>
                </div>
            </div>

            <div class="form-card-body">
                <form asp-action="Edit" class="form-main">
                    <div asp-validation-summary="ModelOnly" class="form-error-summary">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Please correct the following errors:</span>
                    </div>

                    <div class="form-section">
                        <div class="form-section-header">
                            <i class="fas fa-info-circle"></i>
                            <span>Basic Information</span>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Id" class="form-label">
                                    <i class="fas fa-hashtag"></i>
                                    <span>Loan Detail ID</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="Id" class="form-input" readonly />
                                </div>
                                <span asp-validation-for="Id" class="form-error"></span>
                                <small class="form-hint">Loan Detail ID cannot be modified</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="LoanId" class="form-label">
                                    <i class="fas fa-file-alt"></i>
                                    <span>Loan ID</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="LoanId" class="form-input" readonly />
                                </div>
                                <span asp-validation-for="LoanId" class="form-error"></span>
                                <small class="form-hint">Loan ID cannot be modified</small>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Amount" class="form-label">
                                    <i class="fas fa-dollar-sign"></i>
                                    <span>Amount</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="Amount" class="form-input" placeholder="Enter loan amount" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Amount" class="form-error"></span>
                                <small class="form-hint">Enter the loan amount (must be greater than zero)</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="InterestRate" class="form-label">
                                    <i class="fas fa-percentage"></i>
                                    <span>Interest Rate</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="InterestRate" class="form-input" placeholder="Enter interest rate" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="InterestRate" class="form-error"></span>
                                <small class="form-hint">Enter the interest rate (must be greater than zero)</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-section-header">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Dates</span>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="StartDate" class="form-label">
                                    <i class="fas fa-calendar-day"></i>
                                    <span>Start Date</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="StartDate" class="form-input" type="date" />
                                </div>
                                <span asp-validation-for="StartDate" class="form-error"></span>
                                <small class="form-hint">Select the loan start date</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="EndDate" class="form-label">
                                    <i class="fas fa-calendar-day"></i>
                                    <span>End Date</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="EndDate" class="form-input" type="date" />
                                </div>
                                <span asp-validation-for="EndDate" class="form-error"></span>
                                <small class="form-hint">Select the loan end date</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-section-header">
                            <i class="fas fa-info-circle"></i>
                            <span>Status & Debt</span>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Status" class="form-label">
                                    <i class="fas fa-info"></i>
                                    <span>Status</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="Status" class="form-input" placeholder="Enter loan status" />
                                </div>
                                <span asp-validation-for="Status" class="form-error"></span>
                                <small class="form-hint">Enter the current status of the loan (max 50 characters)</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="CurrentDebt" class="form-label">
                                    <i class="fas fa-dollar-sign"></i>
                                    <span>Current Debt</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="CurrentDebt" class="form-input" placeholder="Enter current debt" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="CurrentDebt" class="form-error"></span>
                                <small class="form-hint">Enter the current outstanding debt (must be greater than zero)</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-divider">
                        <span>Review and Submit</span>
                    </div>

                    <div class="form-actions-bottom">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="form-btn form-btn-outline">
                            <i class="fas fa-eye"></i>
                            <span>View Details</span>
                        </a>

                        <button type="reset" class="form-btn form-btn-outline">
                            <i class="fas fa-undo"></i>
                            <span>Reset Changes</span>
                        </button>

                        <button type="submit" class="form-btn form-btn-primary">
                            <i class="fas fa-save"></i>
                            <span>Save Changes</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

       
    </div>

    <!-- Admin Footer would be here -->
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (обязателен для Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</body>
</html>

@model Credit_Management_System.ViewModels.Product.ProductVM

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Product - Credit Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/adminLayout/delete.css">
</head>
<body class="admin-body">
    <!-- Admin Navbar would be here -->
    <!-- Main Content -->
    <div class="delete-container">
        <div class="delete-header">
            <div class="delete-title">
                <h1>Delete Product</h1>
                <p>Review product information before confirming deletion</p>
            </div>

            <div class="delete-actions">
                <a asp-action="Index" class="delete-btn delete-btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to List</span>
                </a>
            </div>
        </div>

        <div class="delete-card">
            <div class="delete-warning">
                <div class="delete-warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="delete-warning-content">
                    <h2>Warning: This action cannot be undone</h2>
                    <p>You are about to permanently delete this product and all associated data. This action cannot be reversed.</p>
                </div>
            </div>

            <div class="delete-card-body">
                <div class="delete-branch-header">
                    <div class="delete-branch-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="delete-branch-title">
                        <h3>@Model.Name</h3>
                        <span class="delete-branch-id">ID: @Model.Id</span>
                    </div>
                    <div class="delete-branch-merchant">
                        <span class="delete-badge">@Model.CategoryName</span>
                    </div>
                </div>

                <!-- Product Image Section -->
                <div class="delete-product-image" style="display: flex; justify-content: center; align-items: center; margin: 20px 0; padding: 20px;">
                    <div class="delete-product-image-container" style="position: relative; width: 250px; height: 250px; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); border: 3px solid #f1f3f4;">
                        <img src="@Url.Content(Model.Image)" alt="@Model.Name" class="delete-product-img" style="width: 100%; height: 100%; object-fit: contain; object-position: center; background-color: #f8f9fa; display: block;" />
                        <div class="delete-product-image-overlay" style="position: absolute; top: 10px; right: 10px; background: rgba(0, 0, 0, 0.6); color: white; padding: 8px; border-radius: 50%; font-size: 14px; display: flex; align-items: center; justify-content: center; width: 32px; height: 32px;">
                            <i class="fas fa-image" style="margin: 0;"></i>
                        </div>
                    </div>
                </div>

                <div class="delete-divider">
                    <span>Product Information</span>
                </div>

                <div class="delete-info-grid">
                    <div class="delete-info-item">
                        <div class="delete-info-icon">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div class="delete-info-content">
                            <div class="delete-info-label">Product Name</div>
                            <div class="delete-info-value">@Model.Name</div>
                        </div>
                    </div>

                    <div class="delete-info-item">
                        <div class="delete-info-icon">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="delete-info-content">
                            <div class="delete-info-label">Price</div>
                            <div class="delete-info-value">@Model.Price.ToString("C")</div>
                        </div>
                    </div>

                    <div class="delete-info-item">
                        <div class="delete-info-icon">
                            <i class="fas fa-cubes"></i>
                        </div>
                        <div class="delete-info-content">
                            <div class="delete-info-label">Quantity</div>
                            <div class="delete-info-value">@Model.Quantity</div>
                        </div>
                    </div>

                    <div class="delete-info-item">
                        <div class="delete-info-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="delete-info-content">
                            <div class="delete-info-label">Availability</div>
                            <div class="delete-info-value">
                                <span class="delete-availability-badge @(Model.IsAvailable ? "available" : "unavailable")">
                                    <i class="fas @(Model.IsAvailable ? "fa-check" : "fa-times")"></i>
                                    @(Model.IsAvailable ? "Available" : "Unavailable")
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="delete-info-item">
                        <div class="delete-info-icon">
                            <i class="fas fa-list-alt"></i>
                        </div>
                        <div class="delete-info-content">
                            <div class="delete-info-label">Category</div>
                            <div class="delete-info-value">@Model.CategoryName</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="delete-info-item delete-info-item-full">
                            <div class="delete-info-icon">
                                <i class="fas fa-align-left"></i>
                            </div>
                            <div class="delete-info-content">
                                <div class="delete-info-label">Description</div>
                                <div class="delete-info-value delete-description">@Model.Description</div>
                            </div>
                        </div>
                        <div class="details-info-item">
                            <div class="details-info-label">Image</div>
                        </div>
                    }
                </div>

                <div class="delete-impact">
                    <div class="delete-impact-header">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Impact of Deletion</span>
                    </div>

                    <div class="delete-impact-items">
                        <div class="delete-impact-item">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Product will be removed from all shopping carts</span>
                        </div>
                        <div class="delete-impact-item">
                            <i class="fas fa-chart-line"></i>
                            <span>Sales history and analytics for this product will be affected</span>
                        </div>
                        <div class="delete-impact-item">
                            <i class="fas fa-history"></i>
                            <span>Order history containing this product will remain but product details will be unavailable</span>
                        </div>
                        <div class="delete-impact-item">
                            <i class="fas fa-image"></i>
                            <span>Product image and associated media files should be manually removed from storage</span>
                        </div>
                    </div>
                </div>

                <div class="delete-confirmation">
                    <form asp-action="Delete" class="delete-form">
                        <input type="hidden" asp-for="Id" />

                        <div class="delete-checkbox-container">
                            <label class="delete-checkbox">
                                <input type="checkbox" id="confirmDelete" required />
                                <span class="delete-checkbox-mark"></span>
                                <span class="delete-checkbox-text">I understand that this action cannot be undone and confirm that I want to permanently delete this product</span>
                            </label>
                        </div>

                        <div class="delete-form-actions">
                            <a asp-action="Index" class="delete-btn delete-btn-outline">
                                <i class="fas fa-times"></i>
                                <span>Cancel</span>
                            </a>

                            <button type="submit" class="delete-btn delete-btn-danger" id="deleteButton" disabled>
                                <i class="fas fa-trash-alt"></i>
                                <span>Permanently Delete</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Footer would be here -->
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Enable delete button only when checkbox is checked
        document.addEventListener('DOMContentLoaded', function () {
            const confirmCheckbox = document.getElementById('confirmDelete');
            const deleteButton = document.getElementById('deleteButton');

            confirmCheckbox.addEventListener('change', function () {
                deleteButton.disabled = !this.checked;
            });

            // Add confirmation dialog
            const deleteForm = document.querySelector('.delete-form');
            deleteForm.addEventListener('submit', function (event) {
                if (!confirm('Are you absolutely sure you want to delete this product? This action CANNOT be undone.')) {
                    event.preventDefault();
                }
            });

            // Image error handling
            const productImg = document.querySelector('.delete-product-img');
            if (productImg) {
                productImg.addEventListener('error', function () {
                    this.style.display = 'none';
                    const overlay = this.parentElement.querySelector('.delete-product-image-overlay');
                    overlay.innerHTML = '<i class="fas fa-image-slash"></i><span>Image not found</span>';
                    overlay.style.opacity = '1';
                });
            }
        });
    </script>
    <!-- jQuery (обязателен для Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    </body>
    </html>
    
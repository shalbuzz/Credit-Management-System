@model List<Credit_Management_System.ViewModels.Product.ProductVM>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <!-- Боковая панель с категориями -->
    <div class="col-md-3">
        <h4>Categories</h4>
        <hr />
        @await Component.InvokeAsync("CategoryMenu")
    </div>

    <!-- Основной контент: список продуктов -->
    <div class="col-md-9">
        <p>
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
                <i class="fas fa-home"></i> HomePage
            </a>
        </p>

        <h1 class="mb-4">Products</h1>

        <p>
            <a class="btn btn-primary mb-3" asp-action="Create" asp-area="Admin">Create New</a>
        </p>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content("~/images/products/" + item.Image)" class="img-fluid" alt="Product Image" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                            <p class="card-text"><strong>Quantity:</strong> @item.Quantity</p>
                            <p class="card-text">
                                <strong>Status:</strong>
                                @if (item.IsAvailable)
                                {
                                    <span class="text-success">Available</span>
                                }
                                else
                                {
                                    <span class="text-danger">Unavailable</span>
                                }
                            </p>
                            <p class="card-text"><strong>Category:</strong> @item.CategoryName</p>
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-sm btn-info me-1" asp-action="Edit" asp-route-id="@item.Id" asp-area="Admin">Edit</a>
                            <a class="btn btn-sm btn-secondary me-1" asp-action="Details" asp-route-id="@item.Id" asp-area="Admin">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Компонент "Последние товары" -->
        <div class="mt-5">
            <h4>Latest Products</h4>
            <hr />
            @await Component.InvokeAsync("LatestProducts", new { count = 3 })
        </div>
    </div>
</div>
@model List<Credit_Management_System.ViewModels.Category.CategoryVM>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-3">
        <!-- Вставка ViewComponent -->
        @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-9">
        <p>
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
                <i class="fas fa-home"></i> HomePage
            </a>
        </p>

        <!-- Основная таблица категорий -->
        <h1>Index</h1>

        <p>
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>ParentCategoryName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.ParentCategoryName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            <a asp-action="Subcategories"
                               asp-route-parentCategoryId="@item.Id"
                               class="btn btn-outline-primary btn-sm">
                                View Subcategories
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

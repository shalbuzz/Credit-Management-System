@model Credit_Management_System.ViewModels.Category.CategoryUpdateVM

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category - Credit Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/adminLayout/edit.css">
</head>
<body class="admin-body">
    <!-- Admin Navbar would be here -->
    <!-- Main Content -->
    <div class="form-container">
        <div class="form-header">
            <div class="form-title">
                <h1>Edit Category</h1>
                <p>Update category information in the system</p>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="form-btn form-btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to List</span>
                </a>
            </div>
        </div>

        <div class="form-card">
            <div class="form-card-header">
                <div class="form-card-header-icon">
                    <i class="fas fa-sitemap"></i>
                </div>
                <div class="form-card-header-content">
                    <h2>Category #@Model.Id</h2>
                    <p>Last updated: <span class="form-timestamp">@DateTime.Now.ToString("MMM dd, yyyy HH:mm")</span></p>
                </div>
                <div class="form-card-header-status">
                    <span class="form-status-badge">
                        <i class="fas fa-pen"></i>
                        <span>Editing</span>
                    </span>
                </div>
            </div>

            <div class="form-card-body">
                <form asp-action="Edit" class="form-main">
                    <div asp-validation-summary="ModelOnly" class="form-error-summary">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Please correct the following errors:</span>
                    </div>

                    <div class="form-section">
                        <div class="form-section-header">
                            <i class="fas fa-info-circle"></i>
                            <span>Category Information</span>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Id" class="form-label">
                                    <i class="fas fa-hashtag"></i>
                                    <span>Category ID</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="Id" class="form-input" readonly />
                                </div>
                                <span asp-validation-for="Id" class="form-error"></span>
                                <small class="form-hint">Category ID cannot be modified</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-signature"></i>
                                    <span>Category Name</span>
                                </label>
                                <div class="form-input-container">
                                    <input asp-for="Name" class="form-input" placeholder="Enter category name" />
                                </div>
                                <span asp-validation-for="Name" class="form-error"></span>
                                <small class="form-hint">Enter the category name (max 100 characters)</small>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="ParentCategoryId" class="form-label">
                                    <i class="fas fa-sitemap"></i>
                                    <span>Parent Category</span>
                                </label>
                                <div class="form-select-container">
                                    <select asp-for="ParentCategoryId" class="form-select" asp-items="(IEnumerable<SelectListItem>)ViewBag.ParentCategories">
                                        <option value="">-- Select Parent Category --</option>
                                    </select>
                                    <i class="fas fa-chevron-down form-select-arrow"></i>
                                </div>
                                <span asp-validation-for="ParentCategoryId" class="form-error"></span>
                                <small class="form-hint">Select a parent category (optional)</small>
                            </div>
                        </div>

                        <div class="form-group form-group-full">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left"></i>
                                <span>Description</span>
                            </label>
                            <div class="form-input-container">
                                <textarea asp-for="Description" class="form-input" placeholder="Enter category description" rows="4"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="form-error"></span>
                            <small class="form-hint">Enter a description for the category (max 500 characters, optional)</small>
                        </div>
                    </div>

                    <div class="form-divider">
                        <span>Review and Submit</span>
                    </div>

                    <div class="form-actions-bottom">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="form-btn form-btn-outline">
                            <i class="fas fa-eye"></i>
                            <span>View Details</span>
                        </a>

                        <button type="reset" class="form-btn form-btn-outline">
                            <i class="fas fa-undo"></i>
                            <span>Reset Changes</span>
                        </button>

                        <button type="submit" class="form-btn form-btn-primary">
                            <i class="fas fa-save"></i>
                            <span>Save Changes</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Admin Footer would be here -->
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (обязателен для Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
   
</body>
</html>


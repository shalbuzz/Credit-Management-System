@model Credit_Management_System.ViewModels.Customer.CustomerCreateVM

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Customer - Credit Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <!-- Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/assets/adminLayout/data-table.css">

</head>
<body class="admin-body">
    <!-- Admin Navbar would be here -->
    <!-- Main Content -->
    <div class="form-container">
        <div class="form-header">
            <div class="form-title">
                <h1>Create New Customer</h1>
                <p>Add a new customer  to the system</p>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="form-btn form-btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to List</span>
                </a>
            </div>
        </div>

        <div class="form-card">
            <div class="form-card-body">
                <div class="form-steps">
                    <div class="form-step active">
                        <div class="form-step-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="form-step-content">
                            <span>Customer Details</span>
                        </div>
                    </div>
                    <div class="form-step-connector"></div>
                    <div class="form-step">
                        <div class="form-step-icon">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="form-step-content">
                            <span>Confirmation</span>
                        </div>
                    </div>
                </div>

                <form asp-action="Create" class="form-main">
                    <div asp-validation-summary="ModelOnly" class="form-error-summary">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Please correct the following errors:</span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label">
                                <i class="fas fa-signature"></i>
                                <span>Customer Name</span>
                            </label>
                            <div class="form-input-container">
                                <input asp-for="FullName" class="form-input" placeholder="Enter customer name" />
                            </div>
                            <span asp-validation-for="FullName" class="form-error"></span>
                            <small class="form-hint">Enter the official name of the customer</small>
                        </div>

                       
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Address</span>
                        </label>
                        <div class="form-input-container">
                            <input asp-for="Address" class="form-input" placeholder="Enter full address" />
                        </div>
                        <span asp-validation-for="Address" class="form-error"></span>
                        <small class="form-hint">Enter the complete physical address of the customer</small>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="fas fa-phone"></i>
                                <span>Phone Number</span>
                            </label>
                            <div class="form-input-container">
                                <input asp-for="PhoneNumber" class="form-input" placeholder="Enter phone number" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="form-error"></span>
                            <small class="form-hint">Include country and area code if applicable</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i>
                                <span>Email Address</span>
                            </label>
                            <div class="form-input-container">
                                <input asp-for="Email" class="form-input" placeholder="Enter email address" type="email" />
                            </div>
                            <span asp-validation-for="Email" class="form-error"></span>
                            <small class="form-hint">Official contact email for this customer</small>
                        </div>
                    </div>

                    <div class="form-actions-bottom">
                        
                        <button type="submit" class="form-btn form-btn-primary">
                            <i class="fas fa-save"></i>
                            <span>Create Customer</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

     
    </div>

    <!-- Admin Footer would be here -->
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (обязателен для Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</body>
</html>

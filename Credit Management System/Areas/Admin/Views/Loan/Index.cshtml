@model List<Credit_Management_System.ViewModels.LoanVM.LoanVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
        <i class="fas fa-home"></i> HomePage
    </a>
</p>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
                Amount
            </th>
            <th>
                InterestRate
            </th>
            <th>
                DurationInMonths
            </th>
            <th>
               StartDate
            </th>
            <th>
               EndDate
            </th>
            <th>
               EmployeeName
            </th>
            <th>
                CustomerName
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationInMonths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { area = "Admin", id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { area = "Admin", id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { area = "Admin", id = item.Id })
                </td>
        </tr>
}
    </tbody>
</table>

@model Credit_Management_System.ViewModels.LoanItem.LoanItemDetailsVM

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loan Item Details - Credit Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/adminLayout/details.css">
</head>
<body class="admin-body">
    <!-- Admin Navbar would be here -->
    <!-- Main Content -->
    <div class="details-container">
        <div class="details-header">
            <div class="details-title">
                <h1>Loan Item Details</h1>
                <p>View complete information about this loan item</p>
            </div>

            <div class="details-actions">
                <a asp-action="Index" class="details-btn details-btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to List</span>
                </a>
            </div>
        </div>

        <div class="details-content">
            <div class="details-sidebar">
                <div class="details-card">
                    <div class="details-card-header">
                        <div class="details-card-icon">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <h2>Loan Item #@Model.Id</h2>
                    </div>

                    <div class="details-card-body">
                        <div class="details-status">
                            <span class="details-status-badge details-status-active">
                                <i class="fas fa-check-circle"></i>
                                <span>Active</span>
                            </span>
                        </div>

                        <div class="details-meta">
                            <div class="details-meta-item">
                                <i class="fas fa-hashtag"></i>
                                <span>ID: @Model.Id</span>
                            </div>
                            <div class="details-meta-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Created: May 10, 2025</span>
                            </div>
                            <div class="details-meta-item">
                                <i class="fas fa-clock"></i>
                                <span>Last Updated: May 15, 2025</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="details-card">
                    <div class="details-card-header">
                        <div class="details-card-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h2>Loan Item Statistics</h2>
                    </div>

                    <div class="details-card-body">
                        <div class="details-stat">
                            <div class="details-stat-icon" style="background-color: rgba(41, 98, 255, 0.1);">
                                <i class="fas fa-cubes" style="color: #2962ff;"></i>
                            </div>
                            <div class="details-stat-content">
                                <h3>@Model.Quantity</h3>
                                <p>Quantity</p>
                            </div>
                        </div>

                        <div class="details-stat">
                            <div class="details-stat-icon" style="background-color: rgba(0, 200, 83, 0.1);">
                                <i class="fas fa-dollar-sign" style="color: #00c853;"></i>
                            </div>
                            <div class="details-stat-content">
                                <h3>@Model.Price.ToString("C")</h3>
                                <p>Price per Unit</p>
                            </div>
                        </div>

                        <div class="details-stat">
                            <div class="details-stat-icon" style="background-color: rgba(255, 152, 0, 0.1);">
                                <i class="fas fa-money-bill-wave" style="color: #ff9800;"></i>
                            </div>
                            <div class="details-stat-content">
                                <h3>@Model.TotalAmount.ToString("C")</h3>
                                <p>Total Amount</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="details-main">
                <div class="details-card">
                    <div class="details-card-header">
                        <div class="details-card-icon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <h2>Loan Item Information</h2>
                    </div>

                    <div class="details-card-body">
                        <div class="details-info-section">
                            <h3>
                                <i class="fas fa-box"></i>
                                <span>Basic Details</span>
                            </h3>

                            <div class="details-info-grid">
                                <div class="details-info-item">
                                    <div class="details-info-label">Loan Item ID</div>
                                    <div class="details-info-value">@Model.Id</div>
                                </div>

                                <div class="details-info-item">
                                    <div class="details-info-label">Product Name</div>
                                    <div class="details-info-value">
                                        <span class="details-badge">@Model.ProductName</span>
                                    </div>
                                </div>

                                <div class="details-info-item">
                                    <div class="details-info-label">Quantity</div>
                                    <div class="details-info-value">@Model.Quantity</div>
                                </div>
                            </div>
                        </div>

                        <div class="details-info-section">
                            <h3>
                                <i class="fas fa-dollar-sign"></i>
                                <span>Financial Details</span>
                            </h3>

                            <div class="details-info-grid">
                                <div class="details-info-item">
                                    <div class="details-info-label">Price per Unit</div>
                                    <div class="details-info-value">@Model.Price.ToString("C")</div>
                                </div>

                                <div class="details-info-item">
                                    <div class="details-info-label">Total Amount</div>
                                    <div class="details-info-value">@Model.TotalAmount.ToString("C")</div>
                                </div>
                            </div>
                        </div>

                        <div class="details-info-section">
                            <h3>
                                <i class="fas fa-user"></i>
                                <span>Associated Party</span>
                            </h3>

                            <div class="details-info-grid">
                                <div class="details-info-item">
                                    <div class="details-info-label">Customer</div>
                                    <div class="details-info-value">
                                        <span class="details-badge">@Model.LoanCustomerName</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Footer would be here -->
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

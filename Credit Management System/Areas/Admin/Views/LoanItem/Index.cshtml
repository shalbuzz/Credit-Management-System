@model List<Credit_Management_System.ViewModels.LoanItemVM.LoanItemVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
        <i class="fas fa-home"></i> HomePage
    </a>
</p>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                TotalAmount
            </th>
            <th>
               ProductName
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { area = "Admin", id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { area = "Admin", id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { area = "Admin", id = item.Id })
                </td>
        </tr>
}
    </tbody>
</table>

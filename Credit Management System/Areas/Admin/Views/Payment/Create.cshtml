@model Credit_Management_System.ViewModels.Payment.PaymentCreateVM

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Paymnet - Credit Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
  
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/assets/adminLayout/data-table.css">

</head>
<body class="admin-body">
    <!-- Admin Navbar would be here -->
    <!-- Main Content -->
    <div class="form-container">
        <div class="form-header">
            <div class="form-title">
                <h1>Create New Payment</h1>
                <p>Add a new payment to the system</p>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="form-btn form-btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to List</span>
                </a>
            </div>
        </div>

        <div class="form-card">
            <div class="form-card-body">
                <div class="form-steps">
                    <div class="form-step active">
                        <div class="form-step-icon">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <div class="form-step-content">
                            <span>Payment Details</span>
                        </div>
                    </div>
                    <div class="form-step-connector"></div>
                    <div class="form-step">
                        <div class="form-step-icon">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="form-step-content">
                            <span>Confirmation</span>
                        </div>
                    </div>
                </div>

                <form asp-action="Create" class="form-main">
                    <div asp-validation-summary="ModelOnly" class="form-error-summary">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Please correct the following errors:</span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LoanId" class="form-label">
                            <i class="fas fa-handshake"></i>
                            <span>Loan</span>
                        </label>
                        <div class="form-select-container">
                            <select asp-for="LoanId" class="form-select" asp-items="Model.Loans">
                                <option value="">-- Select Loan --</option>
                            </select>
                            <i class="fas fa-chevron-down form-select-arrow"></i>
                        </div>
                        <span asp-validation-for="LoanId" class="form-error"></span>
                        <small class="form-hint">Select the loan this payment is for</small>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Amount" class="form-label">
                                <i class="fas fa-dollar-sign"></i>
                                <span>Payment Amount</span>
                            </label>
                            <div class="form-input-container">
                                <input asp-for="Amount" class="form-input" placeholder="Enter payment amount" type="number" min="1" />
                            </div>
                            <span asp-validation-for="Amount" class="form-error"></span>
                            <small class="form-hint">Enter the payment amount (must be greater than zero)</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="PaymentDate" class="form-label">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Payment Date</span>
                            </label>
                            <div class="form-input-container">
                                <input asp-for="PaymentDate" class="form-input" type="date" />
                            </div>
                            <span asp-validation-for="PaymentDate" class="form-error"></span>
                            <small class="form-hint">Select the date when payment was made</small>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="PaymentMethod" class="form-label">
                                <i class="fas fa-wallet"></i>
                                <span>Payment Method</span>
                            </label>
                            <div class="form-input-container">
                                <input asp-for="PaymentMethod" class="form-input" placeholder="Enter payment method" maxlength="50" />
                            </div>
                            <span asp-validation-for="PaymentMethod" class="form-error"></span>
                            <small class="form-hint">Enter payment method (e.g., Cash, Card, Transfer - max 50 characters)</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="ReferenceNumber" class="form-label">
                                <i class="fas fa-hashtag"></i>
                                <span>Reference Number</span>
                            </label>
                            <div class="form-input-container">
                                <input asp-for="ReferenceNumber" class="form-input" placeholder="Enter reference number" maxlength="100" />
                            </div>
                            <span asp-validation-for="ReferenceNumber" class="form-error"></span>
                            <small class="form-hint">Enter unique reference number for this payment (max 100 characters)</small>
                        </div>
                    </div>

                    <div class="form-divider">
                        <span>Review and Submit</span>
                    </div>

                    <div class="form-actions-bottom">
                        <button type="reset" class="form-btn form-btn-outline">
                            <i class="fas fa-undo"></i>
                            <span>Reset Form</span>
                        </button>

                        <button type="submit" class="form-btn form-btn-primary">
                            <i class="fas fa-save"></i>
                            <span>Create Payment</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Admin Footer would be here -->
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (обязателен для Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</body>
</html>

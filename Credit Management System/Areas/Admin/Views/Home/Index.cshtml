@{
    ViewData["Title"] = "Administrator Panel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold text-primary">Welcome to the Admin Panel</h2>
            <p class="text-muted">Here you can manage categories, products, users, and view reports.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-list fa-2x text-info mb-2"></i>
                    <h5 class="card-title">Categories</h5>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-info btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-boxes fa-2x text-success mb-2"></i>
                    <h5 class="card-title">Products</h5>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-success btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-2x text-primary mb-2"></i>
                    <h5 class="card-title">Branches</h5>
                    <a asp-area="Admin" asp-controller="Branch" asp-action="Index" class="btn btn-outline-primary btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x text-warning mb-2"></i>
                    <h5 class="card-title">Customers</h5>
                    <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="btn btn-outline-warning btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-user-tie fa-2x text-secondary mb-2"></i>
                    <h5 class="card-title">Employees</h5>
                    <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-store fa-2x text-dark mb-2"></i>
                    <h5 class="card-title">Merchants</h5>
                    <a asp-area="Admin" asp-controller="Merchant" asp-action="Index" class="btn btn-outline-dark btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-file-invoice-dollar fa-2x text-success mb-2"></i>
                    <h5 class="card-title">Loans</h5>
                    <a asp-area="Admin" asp-controller="Loan" asp-action="Index" class="btn btn-outline-success btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-list-ol fa-2x text-info mb-2"></i>
                    <h5 class="card-title">Loan Items</h5>
                    <a asp-area="Admin" asp-controller="LoanItem" asp-action="Index" class="btn btn-outline-info btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-clipboard-list fa-2x text-primary mb-2"></i>
                    <h5 class="card-title">Loan Details</h5>
                    <a asp-area="Admin" asp-controller="LoanDetail" asp-action="Index" class="btn btn-outline-primary btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-money-check-alt fa-2x text-danger mb-2"></i>
                    <h5 class="card-title">Payments</h5>
                    <a asp-area="Admin" asp-controller="Payment" asp-action="Index" class="btn btn-outline-danger btn-sm mt-2">Manage</a>
                </div>
            </div>
        </div>
    </div>
</div>

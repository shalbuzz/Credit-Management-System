@{
    ViewData["Title"] = "Home Page";
}

<div class="main-content px-4 py-5" style="margin-left: 250px;">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Credit Management System</h1>
        <p class="lead text-muted">Manage loans, customers, products, and payments in one powerful system.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm" style="height: 200px;">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h2 class="card-title">Customer Management</h2>
                    <p class="card-text">Add, edit, and view customers. Track their loans and payment history.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm" style="height: 200px;">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h2 class="card-title">Products & Categories</h2>
                    <p class="card-text">Create and manage loan products and assign them to categories.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm" style="height: 200px;">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h2 class="card-title">Loan Processing</h2>
                    <p class="card-text">Create new loans, add loan items, and define repayment conditions.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm" style="height: 200px;">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h2 class="card-title">Payment Tracking</h2>
                    <p class="card-text">Record payments, monitor balances, and ensure timely repayments.</p>
                </div>
            </div>
        </div>
    </div>
</div>
